{
  "routes": [
    {
      "route": "/api/avd-status",
      "allowedRoles": ["authenticated", "AVD_Users", "AVD_Administrators"]
    },
    {
      "route": "/api/avd-start",
      "allowedRoles": ["AVD_Users", "AVD_Administrators"]
    },
    {
      "route": "/api/avd-stop",
      "allowedRoles": ["AVD_Administrators"]
    }
  ],
  "responseOverrides": {
    "401": { "redirect": "/unauthorized", "statusCode": 302 },
    "403": { "redirect": "/unauthorized", "statusCode": 302 }
  },
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*", "/css/*", "/js/*", "/favicon.ico"]
  }
}
