{
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]  // forces login for any API endpoint
    },
    {
      "route": "/*",
      "serve": "/index.html"
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/aad",
      "statusCode": 302
    }
  },
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/6df6f43e-3d04-4dcc-8210-7bb54b3cd141/v2.0"
        }
      }
    }
  },
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*", "/css/*", "/js/*", "/favicon.ico"]
  },
  "mimeTypes": {
    ".json": "text/json"
  }
}
