{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*"]
  },
  "routes": [
    {
      "route": "/api/avd-status",
      "allowedRoles": ["avd-operator", "avd-admin"]
    },
    {
      "route": "/api/avd-start",
      "allowedRoles": ["avd-operator", "avd-admin"]
    },
    {
      "route": "/api/avd-stop",
      "allowedRoles": ["avd-admin"]
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/aad",
      "statusCode": 302
    }
  },
  "globalHeaders": {
    "X-Frame-Options": "DENY",
    "X-Content-Type-Options": "nosniff",
    "Referrer-Policy": "strict-origin-when-cross-origin"
  },
  "mimeTypes": {
    ".json": "text/json"
  }
}
